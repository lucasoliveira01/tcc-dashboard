@page
@model FiscalizaDashboard.Pages.RequireDetailsModel
@{
    ViewData["Title"] = "Detalhes da Solicitação";
    FiscalizaDashboard.Models.Datum require = (FiscalizaDashboard.Models.Datum)TempData["Requires"];
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container-fluid">
    <br />
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong>Solicitação #@require.id</strong>
                    </div>
                    <div class="card-body">
                        <form class="form-horizontal" action="" method="post" enctype="multipart/form-data">
                            <div class="form-group row">
                                <label class="col-md-3 col-form-label" for="disabled-input">Tipo de Solicitação</label>
                                <div class="col-md-9">
                                    <input asp-for="@require.type" class="form-control" id="disabled-input" type="text" name="disabled-input" placeholder="Disabled" disabled="" value=@require.type>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 col-form-label" for="textarea-input">Descrição do Problema</label>
                                <div class="col-md-9">
                                    <textarea class="form-control" id="textarea-input" name="textarea-input" rows="9" placeholder="Content.." disabled="">@require.description</textarea>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 col-form-label" for="select1">Status</label>
                                <div class="col-md-9">
                                    <select asp-for="Input.status" class="form-control" id="select1" name="select1">
                                        <option value="0">Selecione...</option>
                                        <option value="1">Em Aberto</option>
                                        <option value="2">Em Andamento</option>
                                        <option value="3">Concluído</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 col-form-label" for="textarea-input">Imagem do Problema</label>
                                <div class="col-md-9">
                                    <img src=@require.image class="img-fluid" alt="Responsive image">
                                </div>
                            </div>
                            <div class="card-footer">
                                <button class="btn btn-sm btn-primary" type="submit">
                                    <i class="fa fa-dot-circle-o"></i> Salvar Alterações
                                </button>
                                <button class="btn btn-sm btn-danger" type="reset">
                                    <i class="fa fa-ban"></i> Cancelar
                                </button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
            <!-- /.col-->
        </div>
        <!-- /.row-->
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $("#select1").val(@require.status)
        });
    </script>
}